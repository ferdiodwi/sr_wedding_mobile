<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF">

        <!-- Logo Image -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/sidorabi1" />

        <!-- Welcome Text -->
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView"
            android:layout_marginTop="0dp"
            android:layout_centerHorizontal="true"
            android:text="Hi, Welcome Back! ðŸ‘‹"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Subtext -->
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView6"
            android:layout_centerHorizontal="true"
            android:text="Login to Continue"
            android:textColor="#666666" />

        <!-- Email Label -->
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView7"
            android:layout_marginTop="32dp"
            android:layout_marginStart="32dp"
            android:text="Email"
            android:textColor="#00004D" />

        <!-- Email Input -->
        <EditText
            android:id="@+id/edt_email_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/textView8"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_google"
            android:hint="Masukan Email Anda"
            android:inputType="textEmailAddress" />

        <!-- Password Label -->
        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_email_login"
            android:layout_marginTop="24dp"
            android:layout_marginStart="32dp"
            android:text="Password"
            android:textColor="#00004D" />

        <!-- Password Input -->
        <EditText
            android:id="@+id/edt_password_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/textView9"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_google"
            android:hint="Masukan Password Anda"
            android:inputType="textPassword" />

        <!-- Remember Me Checkbox -->
        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_password_login"
            android:layout_marginTop="8dp"
            android:layout_marginStart="32dp"
            android:text="Remember Me" />

        <!-- Forgot Password -->
        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_password_login"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:text="Forgot Password?"
            android:textColor="@color/lavender" />

        <!-- Login Button -->
        <Button
            android:id="@+id/btn_login_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkBox"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/button_shape"
            android:text="Login"
            android:textColor="#FFFFFF" />

        <!-- Register Suggestion -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_login_login"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:text="Don't have an account?" />

        <!-- Register Button -->
        <TextView
            android:id="@+id/btn_daftar_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_login_login"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/textView"
            android:layout_marginStart="4dp"
            android:text="Register"
            android:textColor="@color/lavender" />

    </RelativeLayout>

</ScrollView>
